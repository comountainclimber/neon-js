{
  "name": "@cityofzion/bootstrap",
  "description": "Bootstrap package.json for new neon module",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfZion/neon-js.git"
  },
  "keywords": ["neo", "antshares", "javascript", "libraries"],
  "author": "Whoever made this",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tslint src/**/*.ts __tests__/**/*.ts __integration__/**/*.ts",
    "prepublishOnly": "yarn lint && yarn build",
    "pretty": "prettier",
    "test": "jest --coverage",
    "test:unit": "jest ./__tests/.*",
    "test:integration": "jest ./__integration__/.*"
  },
  "devDependencies": {
    "@cityofzion/neon-core": "^3.7.2",
    "@types/jest": "^22.2.3",
    "jest": "^22.4.4",
    "ts-jest": "^22.4.6",
    "prettier": "^1.12.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.8.3"
  },
  "peerDependencies": {
    "@cityofzion/neon-core": "^3.7.2"
  },
  "files": ["lib/", "src/"],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex":
      "(/__(tests|integration)__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "collectCoverage": true,
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
}
