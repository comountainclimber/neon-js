    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "@types/jest": "^22.2.3",
    "jest": "^22.4.4",
    "ts-jest": "^22.4.6",
    "prettier": "^1.12.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.8.3"
  },
  "files": ["dist/"]
