{
  "name": "@cityofzion/neon-js",
  "description": "Neon-JS SDK for interacting with NEO blockchain",
  "version": "4.0.0-next.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfZion/neon-js.git"
  },
  "keywords": ["neo", "antshares", "javascript", "libraries"],
  "author":
    "Yak Jun Xiang <snowypowers@gmail.com> (https://github.com/snowypowers)",
  "license": "MIT",
  "main": "dist/index.js",
  "browser": "dist/browser.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && cross-env NODE_ENV=production webpack --mode production",
    "build:lib": "tsc",
    "build:dist": "cross-env NODE_ENV=development webpack --mode development",
